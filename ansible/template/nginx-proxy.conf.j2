# Nginx Reverse Proxy Configuration
# Environment: {{ ENVIRONMENT }}
# Generated: {{ ansible_date_time.iso8601 }}

upstream web_app {
    server {{ container_name }}:{{ container_port }};
    
    # Optional: Add keepalive connections for better performance
    keepalive 32;
}

server {
    listen 80;
    server_name {{ server_name | default('_') }};

    # Logging
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Client body size limit
    client_max_body_size {{ client_max_body_size | default('10M') }};

    # Main application
    location / {
        proxy_pass http://web_app;
        proxy_http_version 1.1;
        
        # Proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # Timeouts
        proxy_connect_timeout {{ proxy_timeout | default('60s') }};
        proxy_send_timeout {{ proxy_timeout | default('60s') }};
        proxy_read_timeout {{ proxy_timeout | default('60s') }};
        
        # Buffering
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        
        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Health check endpoint (no logging)
    location /health {
        proxy_pass http://web_app/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        access_log off;
    }

    # Optional: Static files with caching (if your app serves static content)
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        proxy_pass http://web_app;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        
        # Cache static files
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}